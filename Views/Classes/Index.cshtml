@model IEnumerable<MVCschool.Models.Class>

@{
    ViewData["Title"] = "Index";
}

<h1>Classes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Class</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-primary btn-sm" >Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-success btn-sm" >Details</a>  
                <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-danger btn-sm" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
