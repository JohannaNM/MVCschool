@model IEnumerable<MVCschool.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Enrollments</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Enroll a student</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.SFullName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-primary btn-sm" >Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-success btn-sm" >Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-danger btn-sm" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
